@charset "utf-8";
html 
  -webkit-text-size-adjust: 100% 
  -ms-text-size-adjust: 100% 
  user-select: none
  -webkit-tap-highlight-color: transparent;
  -webkit-touch-callout: none;
  -webkit-overflow-scrolling: touch; 
 


/* 去除iPhone中默认的input样式 */
input[type="submit"],
input[type="reset"],
input[type="button"],
input 
  -webkit-appearance:none 
  resize: none
  border: none 
  outline: none



/* 图片自适应 */
img 
  max-width: 100%
  height: auto
  width: auto\9
  /* ie8 */
  -ms-interpolation-mode: bicubic
  /*为了照顾ie图片缩放失真*/


